<%-include('../partials/header.ejs')%>
<%-include('../partials/navbar.ejs')%>

<div class="container mx5">

    <%-include('../partials/flash.ejs')%>
    <h1>Register </h1>
    <form class="needs-validation" action="/register" method ="POST" novalidate >

        <div class="mb-3">
            <label for="name" class="form-label">Enter Your Full Name</label>
            <input type="text" class="form-control" name="name" id="name" aria-describedby="form-text" required>
        </div>

        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" name ="username" id="username" aria-describedby="form-text" required>
        </div>         
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" required>
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="password" required>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

</div>



<%-include('../partials/footer.ejs')%>